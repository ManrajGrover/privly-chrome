{
  "name": "Privly Content Extension",
  "version": "0.0.5",
  "description": "The Privly development extension for Google Chrome.",
  "manifest_version": 2,
  "icons": { "16": "logo_16.png",
             "48": "logo_48.png",
             "96": "logo_48.png",
             "112": "logo_48.png",
            "128": "logo_128.png" },
  "browser_action": {
    "default_icon": "logo_16.png",
    "default_title": "Post to Privly",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*", "file:///*"],
      "all_frames": true,
      "js": ["privly.js"]
    }
  ]
}
